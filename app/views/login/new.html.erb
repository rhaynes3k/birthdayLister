<h1>Login</h1>

  <% if flash[:notice] %>
    <h2> <%= flash[:notice] %> </h2>
  <% end %>

  <%= form_tag("/member") do %>
    <p>
      <%= label_tag "Email:" %>
      <%= text_field_tag "email" %><br>
      <%= label_tag "Password:" %>
      <%= text_field_tag "password" %><br>
    </p>
  <%= submit_tag "Login" %>
  <% end %>
